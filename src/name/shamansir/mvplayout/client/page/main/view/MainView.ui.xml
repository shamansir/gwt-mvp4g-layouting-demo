<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:gwt="urn:import:com.google.gwt.user.client.ui">

    <gwt:VerticalPanel width="80%" height="100%">
        <gwt:cell>
            <gwt:Label styleName="toolbar">Toolbar</gwt:Label>
        </gwt:cell>
        <gwt:cell height="80%">
            <gwt:SimplePanel styleName="frame"> <!-- just to mark it in hierarchy for CSS -->            
                <gwt:ScrollPanel ui:field="scrollable"> <!-- if you really need scrolling -->
                    <!-- LAYOUT WILL BE PLACED HERE -->
                    <gwt:FlowPanel ui:field="layoutHolder" />
                </gwt:ScrollPanel>
            </gwt:SimplePanel>
        </gwt:cell>
        <gwt:cell width="100%">
            <gwt:HorizontalPanel styleName="footer" width="99%">
                <gwt:cell width="70%">
                    <gwt:Label styleName="copy">Copy</gwt:Label>
                </gwt:cell>
                <gwt:cell>
                   <gwt:Label styleName="logo">Logo</gwt:Label>
                </gwt:cell>                
            </gwt:HorizontalPanel>
        </gwt:cell>             
    </gwt:VerticalPanel>

</ui:UiBinder> 