<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:gwt="urn:import:com.google.gwt.user.client.ui">

    <gwt:FlowPanel> <!-- just a wrapper -->

	    <gwt:FlowPanel ui:field="ifEmpty">
	        <gwt:Label>No details for current user</gwt:Label>
	    </gwt:FlowPanel>
	    
        <gwt:FlowPanel ui:field="whenLoading">
            <gwt:Label>Loading details...</gwt:Label>
        </gwt:FlowPanel>    
        
        <gwt:FlowPanel ui:field="detailsHolder" />
    
    </gwt:FlowPanel>

</ui:UiBinder> 