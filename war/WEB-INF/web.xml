<web-app>
    
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>LayoutingDemo.html</welcome-file>
  </welcome-file-list>
  
  <!-- Servlets -->
  <servlet>
    <servlet-name>greetServlet</servlet-name>
    <servlet-class>name.shamansir.mvplayout.server.GreetingServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>greetServlet</servlet-name>
    <url-pattern>/LayoutingDemo/greet</url-pattern>
  </servlet-mapping>  
  
